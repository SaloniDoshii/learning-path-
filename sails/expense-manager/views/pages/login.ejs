<section class=" vh-100 bg-image"
	style="background-image: url('https://learn.canva.com/wp-content/uploads/2020/02/removing-background-images_Unsplash.jpeg') ;">

	<div class="px-4 py-5 px-md-5 text-center text-lg-start">
		<div class="container">
			<div class=" align-items-center">
				

				<div class=" mt-5 pt-5 mb-lg-0">
					<div class="card">
						<div class="text-center">
							<p class="lead fw-normal mt-2 mb-0 me-3">Login</p>
							<button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
								<i class="fab fa-facebook-f"></i>
							</button>

							<button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
								<i class="fab fa-google"></i>
							</button>

							<button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
								<i class="fab fa-twitter"></i>
							</button>

							<button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
								<i class="fab fa-github"></i>
							</button>
						</div>
						<div class="card-body py-5 px-md-5">
							<form action="/login/create" method="post">
								<!-- flash messages -->
								<% flash.get('error').forEach(function (message) { %>
									<div class="alert alert-dismissible  alert-danger fade show " role="alert">
									  <button class="btn-close light" type="button" data-bs-dismiss="alert" aria-label="close"></button>
									  <strong>  <%= message %></strong>
								  </div>
								  <% }) %>
										<!-- Email input -->

										<div class="form-outline mb-4">
											<input type="email" name="email" id="email" class="form-control" required />
											<label class="form-label" for="form3Example3">Email address</label>
										</div>

										<!-- Password input -->

										<div class="form-outline mb-4">
											<!-- flash messages -->
											<% flash.get('password').forEach(function (message) { %>
												<div class="alert alert-dismissible  alert-danger fade show " role="alert">
												  <button class="btn-close light" type="button" data-bs-dismiss="alert" aria-label="close"></button>
												  <strong>  <%= message %></strong>
											  </div>
											  <% }) %>
											<input type="password" id="form3Example4" name="password"
												class="form-control" required />
											<label class="form-label" for="form3Example4">Password</label>
										</div>



										<!-- Submit button -->
										<div class="text-center">
											<button type="submit" class="btn btn-dark btn-lg  mb-4">
												Login

											</button>
											<p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a
													href="/signup" class="link-danger">Register</a></p>
										</div>
						</div>


						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
</section>
