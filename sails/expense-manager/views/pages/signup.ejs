<section
  class="vh-100 bg-image"
  style="
    background-image: url('https://learn.canva.com/wp-content/uploads/2020/02/removing-background-images_Unsplash.jpeg');
  "
>
  <div class="px-4 py-5 px-md-5 text-center text-lg-start">
    <div class="container">
      <div class="align-items-center">
        <div class="mt-5 pt-5 mb-lg-0">
          <div class="card">
            <div class="text-center">
              <p class="lead fw-normal mt-2 mb-0 me-3">Sign Up</p>
              <button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
                <i class="fab fa-facebook-f"></i>
              </button>

              <button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
                <i class="fab fa-google"></i>
              </button>

              <button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
                <i class="fab fa-twitter"></i>
              </button>

              <button type="button" class="btn btn-dark mt-2 btn-floating mx-1">
                <i class="fab fa-github"></i>
              </button>
            </div>
            <div id="error" class="card-body py-5 px-md-5">
              <!-- flash messages -->
              <% flash.get('danger').forEach(function (message) { %>
              <div
                class="alert alert-dismissible alert-danger fade show"
                role="alert"
              >
                <button
                  class="btn-close light"
                  type="button"
                  data-bs-dismiss="alert"
                  aria-label="close"
                ></button>
                <strong> <%= message %></strong>
              </div>
              <% }) %>
              <form id="form" action="/signup/create" method="post">
                <!-- firstname input -->
                <div class="form-outline mb-4">
                  <input
                    type="name"
                    id="firstname"
                    name="firstname"
                    class="form-control"
                    required
                  />
                  <label class="form-label" for="form3Example3"
                    >First Name</label
                  >
                </div>

                <!-- Last Name input -->
                <div class="form-outline mb-4">
                  <input
                    type="name"
                    id="lastname"
                    name="lastname"
                    class="form-control"
                    required
                  />
                  <label class="form-label" for="form3Example3"
                    >Last Name</label
                  >
                </div>

                <!-- Email input -->
                <div class="emailerror mb-4">
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    required
                  />
                  <label class="form-label" for="form3Example3"
                    >Email address</label
                  >
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                    required
                  />
                  <label class="form-label" for="form3Example4">Password</label>
                </div>

                <!-- Submit button -->
                <div class="text-center">
                  <button type="submit" class="btn btn-dark btn-lg mb-4">
                    Sign up
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
